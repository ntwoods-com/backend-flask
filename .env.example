# Core
ENV=development
APP_VERSION=dev
LOG_LEVEL=INFO
TIMEZONE_DISPLAY=Asia/Kolkata

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority
DB_NAME=hrms
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000

# Auth (JWT)
JWT_SECRET=change-me
JWT_EXP_MINUTES=720

# CORS (comma-separated origins; for GitHub Pages use https://<username>.github.io)
CORS_ORIGINS=http://localhost:5173
CORS_ALLOW_CREDENTIALS=0

# Rate limiting (in-memory, per instance)
RATE_LIMIT_GLOBAL=1200 per minute
RATE_LIMIT_DEFAULT=300 per minute
RATE_LIMIT_LOGIN=30 per minute

# One-time bootstrap (optional, recommended for first admin user creation)
BOOTSTRAP_TOKEN=change-me-once

# Docs toggle only (does not affect runtime)
ENABLE_KEEPALIVE_DOCS=0
